@model IEnumerable<BookDonation.Web.ViewModels.DonateVM>
@*@{
    ViewBag.Title = "Request A Book";
}*@
@{
    ViewBag.Title = "RED TEAM BOOK EXCHANGE SYSTEM";
}

<h2 style="color :red">@ViewBag.Title</h2>
<h4><b>Request Book</b></h4>



<table class="table" style="width: 1200px;">
    <tr>

        <th>
            <b>GenreId</b>
        </th>
        <th>
            <b>AuthorId</b>
        </th>
        <th>
            <b>Title</b>
        </th>
        <th>
            <b>ISBN</b>
        </th>
        @*<th>
                <b>NumBookDonated</b>
            </th>*@
        <th>
            <b>Image</b>
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.GenreId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.NumBookDonated)
            </td>*@
            <td>
                <img src="/Home/RetrieveImage/@item.Id" alt="" height=50 width=50 />
            </td>

            <td>

                @Html.ActionLink("Cart", "Cart", new { id = item.Id })
            </td>


        </tr>
    }
</table>


